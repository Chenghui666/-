<!--pages/userCenter/userCenter.wxml-->
<!-- 个人中心 -->
<view>
  <view class="TopBackground">
    <view class="info">
      <text class="info_bottom">坚韧不拔,勇者无畏</text>
      <text class="info_bottom">等级</text>
    </view>
    <view class="userCenter_head">
      <image class="userCenter_head01" src="../../images/me_other/yemain01.png"></image>
    </view>
  </view>
  <!-- 选项卡部分 -->
  <view>
    <view class="swiper-tab">
      <view class="swiper-tab-item {{currentTab==0?'active':''}}" data-current="0" bindtap="clickTab">文章</view>
      <view class="swiper-tab-item {{currentTab==1?'active':''}}" data-current="1" bindtap="clickTab">收藏</view>
      <view class="swiper-tab-item {{currentTab==2?'active':''}}" data-current="2" bindtap="clickTab">最近</view>
    </view>

    <swiper current="{{currentTab}}" duration="300" bindchange="swiperTab">
      <swiper-item><view>
      <!-- 回复界面 -->
      嘻嘻
      </view></swiper-item>
      <swiper-item><view>
      <!-- 系统界面 -->
      </view></swiper-item>
      <swiper-item><view>
      <!-- 系统界面 -->
      </view></swiper-item>
    </swiper>
  </view>
</view>
